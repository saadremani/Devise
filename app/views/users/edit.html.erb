
<%if @user.errors.any? then %>	
				<div class="alert alert-danger" role="alert"> 
					<%=  @user.errors.full_messages %>
				</div> 
<% end %>


<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <%= form_for @user, url: user_path(current_user.id), html:  {method: :put, class: "form-signin mt-3" } do |f| %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Editer le profil!</h1>
        <div class="form-group">
          <%= f.label :first_name, "PrÃ©nom" %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :last_name, "Nom" %><br />
          <%= f.text_field :last_name, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description, "Description" %>
          <%= f.text_area :description, autocomplete: "new-password", class: "form-control" %>
        </div>
        <div class="actions mt-5">
          <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
